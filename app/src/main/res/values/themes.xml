<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/post_light</item>
    </style>

    <style name="AppTheme.Base" parent="AppTheme">
        <item name="android:windowBackground">@color/post_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarSize">56dp</item>
    </style>

    <style name="AppTheme.Base.VK" parent="AppTheme.Base">
        <item name="colorPrimary">#6182aa</item>
        <item name="colorPrimaryDark">#ff486687</item>
        <item name="colorAccent">#c3ccd9</item>
    </style>

    <style name="AppTheme.Base.Photo" parent="AppTheme.Base">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ShadeActionBar</item>
        <item name="actionBarSize">@dimen/abc_action_bar_default_height_material</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.Base.Floating" parent="AppTheme.Base">
        <item name="android:background">@color/icons</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:ignore="NewApi">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
